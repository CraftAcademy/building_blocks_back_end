.base
  %h3 Create a new facility
  = form_for (@facility) do |f|
    .field
      = f.label :name
      %br/
      = f.text_field :name
    .field
      = f.label :description
      %br/
      = f.text_area :description
    .field
      = f.label :rules
      %br/
      = f.text_field :rules
    .field
      = f.label 'Available'
      %br/
      = f.check_box(:status, {}, true, false)
    .actions
      = f.submit "Submit"
