.base
  %h3 Help request messages
  .row
    - if @help_requests.count > 0
      - @help_requests.each do |help|
        .large-4.medium-4.columns
          .card
            .newh
              - if help.urgent == true
                .stat_urgent
              = help.title
          = help.message
          %br
          %br
          = link_to "Create work order", new_building_workorder_path(session[:current_building_id], help.id), class: 'button tiny inc'
          = link_to "Delete", "/buildings/#{session[:current_building_id]}/help_requests/#{help.id})", method: :delete, class: 'button tiny alert'
    - else
      %h5 Help request feature not activated. Please contact support for activation.
