.base
  %h3 Help request messages
  .row
    - @help_requests.each do |help|
      .large-4.medium-4.columns
        .card
          .newh
            = help.title
        = help.message
        %br
        = link_to "Delete", "/help_requests/#{help.id})", method: :delete, class: 'button tiny alert'
