%h3 Hello! Welcome to Building blockz administration
.row.facil
  - @facilities.each do | facility |
    .large-2.medium-2.columns
      = link_to image_tag('facility.png', size: "100x100"), facility_path(facility.id)
      %br
      = link_to facility.name, facility_path(facility.id)

%table
  %tr
    %th.help
      .helph
        %h3 Urgent Help requests
    %th.news
      .newsh
        %h3 Latest News
    %th.work
      .workh
        %h3 Work orders status
  %tr
    %th.help
      - @help_requests.each do |help|
        .card
          .card-divider
            = help.title
          = help.message
          %br
          - if help.workorder_id == nil
            = link_to 'Create work order' , new_workorder_path(help.id), class: 'w_link'
    %th.news
      - @news.each do |news|
        .card
          .card-divider
            = news.title
          = news.description

    %th.work
      - @workorder.each do |work|
        .card
          .card-divider
            = work.title
            - if work.status == 'Done'
              .stat_green
            -elsif work.status == 'In progress'
              .stat_yellow
            -elsif work.status == 'Unable to complete'
              .stat_red
          = work.message
