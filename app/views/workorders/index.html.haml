.base
  %ul.large-block-grid-3
    %h3 Work orders
    - @workorders.each do |work|
      %li
        .card.work
          .card-divider
            = work.title
          Message
          %br
          = work.message
          %br Location
          = work.location
          = form_tag workorder_path(work.id), {method: :patch} do
            = label_tag :status
            = select_tag :status, options_for_select(['In progress','Unable to complete','Done'], selected: work.status)
            = submit_tag "Update status", class: 'button inc'
