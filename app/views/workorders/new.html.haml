Send work order
= form_for @workorder do |f|
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :message
    %br/
    = f.text_area :message
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .field
    = f.label :urgent
    %br/
    = f.check_box(:urgent, {}, true, false)
  .actions
    = f.submit "Send"
